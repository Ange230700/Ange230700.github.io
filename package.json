{
  "name": "definite-resume",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "clean": "rm -rf ./node_modules/ ./package-lock.json && npm run clean --workspaces",
    "reboot": "npm run clean && npm install",
    "prettier:lint": "prettier --write . && eslint --fix . && npm run prettier:lint --workspaces",
    "prettier-watch:root": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prettier-watch:server": "cd server && npm run prettier-watch:server",
    "prepare": "husky",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.14.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "onchange": "^7.1.0",
    "prettier": "3.3.3",
    "validate-branch-name": "^1.3.1"
  }
}
