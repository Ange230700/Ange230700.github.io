{
  "name": "resume",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf ./node_modules/ ./dist/ ./package-lock.json",
    "reboot": "npm run clean && npm install",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prettier:lint": "prettier --write . && eslint --fix .",
    "prepare": "husky",
    "build": "vite build",
    "preview": "vite preview",
    "dev": "vite --host",
    "start": "npm run reboot && npm run prettier && npm run lint && git add . && npx commit-prompt && npm run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "onchange": "^7.1.0",
    "prettier": "3.3.3",
    "validate-branch-name": "^1.3.1",
    "vite": "^5.4.10"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
